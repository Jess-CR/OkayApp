<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bedu.okayapp.Inicio.LogIn"
    android:background="@color/lighter_gray">

    <TextView
        android:id="@+id/sign_up_txt_title"
        android:layout_width="166dp"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        android:text="Iniciar sesiÃ³n"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_in_txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/log_in_email"
        android:textColor="@color/grey_letters"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_title" />

    <EditText
        android:id="@+id/log_in_editText_email"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="@string/log_in_email_ph"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_txt_title"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_title"
        app:layout_constraintTop_toBottomOf="@+id/log_in_txt_email" />

    <TextView
        android:id="@+id/log_in_txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/login_password"
        android:textColor="@color/grey_letters"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/log_in_txt_email"
        app:layout_constraintTop_toBottomOf="@+id/log_in_editText_email" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:endIconMode="password_toggle"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/log_in_editText_email"
        app:layout_constraintStart_toStartOf="@+id/log_in_editText_email"
        app:layout_constraintTop_toBottomOf="@+id/log_in_txt_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/log_in_editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="@string/log_in_password_ph"
            android:textColor="@color/grey_placeholders" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/log_in_txt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="forgotPassword"
        android:text="@string/log_in_forgotpassword"
        android:textColor="@color/yolo_blue"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <CheckBox
        android:id="@+id/log_in_chkBox_remember"
        android:layout_width="wrap_content"

        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:hint="@string/log_in_remember"
        android:textColor="@color/purple"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/log_in_txt_forgot"
        app:layout_constraintStart_toStartOf="@+id/log_in_txt_forgot"
        app:layout_constraintTop_toBottomOf="@+id/log_in_txt_forgot" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/log_in_btn_logIn"
        android:layout_width="316dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/blue_botton"
        android:hint="@string/log_in_button"
        android:text="@string/log_in_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/log_in_chkBox_remember"
        app:layout_constraintVertical_bias="0.369" />


</androidx.constraintlayout.widget.ConstraintLayout>