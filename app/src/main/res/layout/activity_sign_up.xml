<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bedu.okayapp.Inicio.SignUp"
    android:background="@color/purple_background">


    <TextView
        android:id="@+id/sign_up_txt_title"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:text="@string/sign_up_title"
        android:textColor="@color/purple"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_editText_username"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/sign_up_user_name_ph"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_title" />

    <EditText
        android:id="@+id/sign_up_editText_email"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/sign_up_email_ph"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_username" />

    <EditText
        android:id="@+id/sign_up_editText_password"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/sign_up_password_ph"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_email" />

    <EditText
        android:id="@+id/sign_up_editText_passwordConfirmation"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/sign_up_password_confirmation_ph"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_password" />


    <NumberPicker
        android:id="@+id/sign_up_numPicker_age"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:paddingLeft="20dp"
        android:scrollbarSize="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_passwordConfirmation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up_btn_continuar"
        android:layout_width="316dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/yolo_purple"
        android:text="@string/sign_up_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.AppCompat.Light.ListView.DropDown"
        android:id="@+id/textInputLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_btn_continuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_numPicker_age">

        <AutoCompleteTextView

            android:id="@+id/sign_up_editText_profession"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white"
            android:hint="@string/sign_up_profession_ph"
            android:inputType="none"
            android:paddingLeft="20dp"
            android:textColor="@color/grey_placeholders"
            android:textSize="15dp" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>