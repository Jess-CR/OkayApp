<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/purple_background">


    <TextView
        android:id="@+id/sign_up_txt_title"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:text="@string/sign_up_title"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_editText_username"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/sign_up_user_name_ph"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_title" />

    <EditText
        android:id="@+id/sign_up_editText_email"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/sign_up_email_ph"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_username" />

    <EditText
        android:id="@+id/sign_up_editText_password"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/sign_up_password_ph"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_email" />

    <EditText
        android:id="@+id/sign_up_editText_passwordConfirmation"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:hint="@string/sign_up_password_confirmation_ph"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_editText_password" />


    <Button
        android:id="@+id/sign_up_btn_continuar"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="546dp" />

    <EditText
        android:id="@+id/editTextNumber_age"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:hint="¿Cuántos años tienes?"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:scrollbarSize="7dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <AutoCompleteTextView
        android:id="@+id/sign_up_editText_profession"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:hint="@string/sign_up_profession_ph"
        android:inputType="none"
        android:textColor="@color/grey_placeholders"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="81dp" />


</androidx.constraintlayout.widget.ConstraintLayout>