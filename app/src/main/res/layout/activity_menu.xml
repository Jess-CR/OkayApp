<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".Menu">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_logIn"
        android:layout_width="316dp"
        android:layout_height="64dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/blue_botton"
        android:text="@string/log_in_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/logoMenu"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_signUp"
        android:layout_width="316dp"
        android:layout_height="64dp"
        android:layout_marginTop="192dp"
        android:backgroundTint="@color/white"
        android:text="@string/menu_sign_up"
        android:textColor="@color/blue_botton"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/logoMenu"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu"
        app:strokeColor="@color/blue_botton"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/logoMenu"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="204dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_btn_logIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_img_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>